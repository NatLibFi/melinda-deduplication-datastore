{
  "name": "@natlibfi/melinda-deduplication-datastore",
  "description": "Datastore microservice of Melinda deduplication system",
  "homepage": "https://github.com/natlibfi/melinda-deduplication-datastore-melinda",
  "bugs": {
    "url": "https://github.com/natlibfi/melinda-deduplication-datastore-melinda/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/melinda-deduplication-datastore-melinda.git"
  },
  "license": "AGPL-3.0+",
  "version": "1.0.0",
  "engines": {
    "node": ">=7"
  },
  "main": "dist/index",
  "files": [
    "dist",
    "bin/start"
  ],
  "bin": "./bin/start",
  "scripts": {
    "prepare": "npm run build",
    "lint": "eslint --fix src",
    "clean:build": "rimraf dist",
    "build:transpile": "babel src -d dist",
    "build": "npm run clean:build && npm run build:transpile",
    "test": "npm run lint && flow",
    "test:unit": "NODE_ENV=test mocha *.spec.js --compilers js:babel-register src/**/*.spec.js",
    "test:watch": "NODE_ENV=test mocha *.spec.js --compilers js:babel-register src/**/*.spec.js -w",
    "dev": "concurrently --kill-others 'npm run build:transpile -- -w' 'sleep 5 && nodemon -w dist dist/index.js'",
    "publish-to-npm": "npm test && npm publish --access=public"
  },
  "dependencies": {
    "@natlibfi/melinda-deduplication-common": "^2.0.2",
    "body-parser": "^1.17.2",
    "diff": "^3.3.0",
    "diff-match-patch": "^1.0.0",
    "es6-promisify": "^5.0.0",
    "express": "^4.15.3",
    "http-status-codes": "^1.1.6",
    "line-by-line": "^0.1.5",
    "lodash": "^4.17.4",
    "marc-record-js": "^0.3.2",
    "moment": "^2.18.1",
    "mysql": "^2.13.0",
    "normalize-strings": "^1.1.0",
    "roman-numerals": "^0.3.2",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "chai": "^4.1.1",
    "concurrently": "^3.5.0",
    "eslint": "^4.1.1",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.6.0",
    "flow-bin": "^0.48.0",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "sinon": "^3.2.1"
  }
}
