{
  "name": "melinda-deduplication-datastore",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "postinstall": "cd melinda-deduplication-common && npm install",
    "build": "npm run build:main && npm run build:common && npm run copy:main:packagejson && npm run copy:common:packagejson && npm run copy:migrations",
    "build:main": "cd src && babel . -d ../build/",
    "build:common": "babel melinda-deduplication-common --ignore node_modules,spec.js --out-dir build/melinda-deduplication-common --source-maps",
    "copy:main:packagejson": "cp package.json build",
    "copy:common:packagejson": "cp melinda-deduplication-common/package.json build/melinda-deduplication-common/package.json",
    "copy:migrations": "cp src/schema/migrations/*.sql build/schema/migrations/",
    "test": "npm run flow && npm run test:unit",
    "test:unit": "BABEL_ENV=test mocha --compilers js:babel-core/register \"melinda-deduplication-common/{,!(node_modules)/**/}*.spec.js\" \"src/**/*.spec.js\"",
    "test:watch": "npm run test:unit -- -w",
    "flow": "flow",
    "dev": "concurrently --kill-others 'npm run build:main -- -w' 'npm run build:common -- -w' 'sleep 7 && nodemon -w build build/index.js'"
  },
  "author": "Pasi Tuominen <pasi.tuominen@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "diff": "^3.3.0",
    "diff-match-patch": "^1.0.0",
    "es6-promisify": "^5.0.0",
    "express": "^4.15.3",
    "http-status-codes": "^1.1.6",
    "line-by-line": "^0.1.5",
    "lodash": "^4.17.4",
    "marc-record-js": "^0.3.2",
    "moment": "^2.18.1",
    "mysql": "^2.13.0",
    "normalize-strings": "^1.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "chai": "^4.1.1",
    "concurrently": "^3.5.0",
    "eslint": "^4.1.1",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.6.0",
    "flow-bin": "^0.48.0",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "sinon": "^3.2.1"
  }
}
